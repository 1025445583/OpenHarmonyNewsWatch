<div class="container">
    <div class="news-container">
        <list class="todo-wrapper" scrollbar="on">
            <list-item for="{{(index,value) in content}}"  data-index="{{index}}" class="todo-item" >
                <div  style="flex-direction: column;align-items: center;justify-content: center; ">
                    <text >{{value.index}}.{{value.title}} 热度：{{value.hot}}</text>
                </div>
            </list-item>
        </list>
    </div>
</div>
